<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.solutions.medadhere.medadheresolutionsapp.BloodPressureActivity"
    tools:showIn="@layout/app_bar_blood_pressure"
    android:weightSum="1">

    <TextView
        android:id="@+id/bp_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Blood Pressure Goal: "
        android:layout_marginBottom="20dp"/>

    <!--
    <CalendarView
        android:id="@+id/calendar"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    -->



    <sun.bob.mcalendarview.MCalendarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calendarBlood"
        android:layout_marginBottom="20dp"
        />



    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on date from calendar above to enter a new blood pressure reading. " />
</LinearLayout>
