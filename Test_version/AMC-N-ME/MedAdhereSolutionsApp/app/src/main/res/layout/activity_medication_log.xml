<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MedicationLogActivity"
    android:background="@color/white_pressed"
    android:weightSum="1">


    <Spinner
        android:layout_marginTop="50dp"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/medicationSpinner"
        android:layout_gravity="center_horizontal"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:spinnerMode="dropdown"
        android:clickable="true"
        android:textAlignment="center"/>


    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:timePickerMode="spinner"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_gravity="center_horizontal">
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submit"
        android:text="Submit"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/checkLogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkLogs"
        android:text="Check Logs"
        android:layout_gravity="center_horizontal" />
        </LinearLayout>
        <Button
            android:id="@+id/returnToCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="returnToCal"
            android:text="Return to Calendar"
            android:layout_gravity="center_horizontal" />


</LinearLayout>