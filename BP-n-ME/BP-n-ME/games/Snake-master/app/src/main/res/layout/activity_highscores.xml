<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_highscores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joelclarke.snakeforandroid.Highscores"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="@color/writing"
                android:text="Highscores"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableLayout
                android:padding="5dp"
                android:stretchColumns="*"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="0dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:textSize="18sp"
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="Position"
                        android:textStyle="normal|bold" />
                    <TextView
                        android:textSize="18sp"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="Name"
                        android:textStyle="normal|bold" />
                    <TextView
                        android:textSize="18sp"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="Score"
                        android:textStyle="normal|bold" />
                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="1" />
                    <TextView
                        android:id="@+id/nm_row_1"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_1"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="2" />
                    <TextView
                        android:id="@+id/nm_row_2"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_2"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />

                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="3" />
                    <TextView
                        android:id="@+id/nm_row_3"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_3"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="4" />
                    <TextView
                        android:id="@+id/nm_row_4"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_4"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="5" />
                    <TextView
                        android:id="@+id/nm_row_5"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_5"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="6" />
                    <TextView
                        android:id="@+id/nm_row_6"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_6"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="7" />
                    <TextView
                        android:id="@+id/nm_row_7"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_7"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="8" />
                    <TextView
                        android:id="@+id/nm_row_8"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_8"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="9" />
                    <TextView
                        android:id="@+id/nm_row_9"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_9"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="0dp">
                    <TextView
                        android:layout_column="0"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        android:text="10" />
                    <TextView
                        android:id="@+id/nm_row_10"
                        android:layout_column="1"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                    <TextView
                        android:id="@+id/sc_row_10"
                        android:layout_column="2"
                        android:padding="10dp"
                        android:textColor="@color/writing"
                        />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
