<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/popup_game_over"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <TextView
        android:layout_weight="1"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="@color/writing"
        android:text="Game Over"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/game_score"
        android:padding="30dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/writing"
        android:text="Score: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="@color/writing"
        android:padding="10dp"
        android:background="@drawable/edittext_shape"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_input"
        android:hint="Input Player Name"
        android:textColorHint="@color/no_achieve"/>

    <LinearLayout
        android:padding="30dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/restart"
                android:background="@drawable/game_over_buttons"
                android:textColor="@color/writing"
                android:text="Restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/no_achieve"
                android:shadowRadius="5"/>
        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/main_menu"
                android:background="@drawable/game_over_buttons"
                android:textColor="@color/writing"
                android:text="Main Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/no_achieve"
                android:shadowRadius="5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>