<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joelclarke.snakeforandroid">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/hand_painted_snake_design_1152_82"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewGame"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation">

            </activity>
        <activity android:name=".Highscores" />
        <activity android:name=".Settings" />
        <activity android:name=".Exit" />
        <activity android:name=".Achievements" />
        <activity android:name=".HowToPlay"></activity>
    </application>

</manifest>