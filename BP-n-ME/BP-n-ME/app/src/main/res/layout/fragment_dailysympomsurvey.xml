<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true" >

    <RelativeLayout
        android:id="@+id/rL1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Daily Symptom survey"
            android:textColor="#FFF"
            android:textSize="19sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_below="@+id/rL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Questions"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/ll_questionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/round_question_border" >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="4" >

                <Button
                    android:id="@+id/q1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:clickable="true"
                    android:background="@drawable/question_button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"  />

                <Button
                    android:id="@+id/q2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:clickable="true"
                    android:background="@drawable/question_button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"  />

                <Button
                    android:id="@+id/q3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:clickable="true"
                    android:background="@drawable/question_button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"  />

                <Button
                    android:id="@+id/q4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:clickable="true"
                    android:background="@drawable/question_button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="3" >

                <Button
                    android:id="@+id/q5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:clickable="true"
                    android:background="@drawable/question_button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <Button
                    android:id="@+id/q6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:clickable="true"
                    android:background="@drawable/question_button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <Button
                    android:id="@+id/q7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:clickable="true"
                    android:background="@drawable/question_button_border"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ll1"
        android:layout_above="@+id/ll2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" >

            <TextView
                android:id="@+id/questionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_question"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:textColor="#000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radiogroup" >
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:weightSum="3" >

        <ImageView
            android:id="@+id/iv_prev"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1.1"
            android:visibility="invisible"
            android:layout_marginEnd="20dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/submit"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bt_round_blue" />

        <TextView
            android:id="@+id/submit"
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/submit"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/bt_blue_border" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1.1"
            android:layout_marginStart="20dp"
            android:visibility="invisible"
            android:src="@drawable/right_arrow" />
    </LinearLayout>

</RelativeLayout>