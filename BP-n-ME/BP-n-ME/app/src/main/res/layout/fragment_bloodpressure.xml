<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/mcalendarBp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/calendarbg"
        app:mcv_tileHeight="35dp"
        app:mcv_showOtherDates="out_of_range"
        app:mcv_calendarMode="month"
        app:mcv_arrowColor="@android:color/black"
        app:mcv_selectionColor="@color/appOrange"
        app:mcv_headerTextAppearance="@style/headerTextAppearance"
        app:mcv_dateTextAppearance="@style/monthTextAppearance"
        app:mcv_weekDayTextAppearance="@style/weekTextAppearancemember"/>

    <TextView
        android:id="@+id/text_bpgoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="My Blood Pressure Goal:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/appOrange" />

    <TextView
        android:id="@+id/tv_bpgoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="start"
        android:text=""
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/bp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/bp_text"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <ListView
        android:id="@+id/bpListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:scrollbarThumbVertical="@android:color/transparent" />

</LinearLayout>