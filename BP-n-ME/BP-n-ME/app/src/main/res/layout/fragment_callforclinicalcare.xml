<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call My Pharmacy"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pharmacyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="name of pharmacy"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/pharmacyCall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/phone"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call My Physician"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/physicianName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="name of physician"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/physicianCall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/phone"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GA Quit Line"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="(1-877-270-STOP)"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/gaQuitCall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/phone"/>
    </LinearLayout>
</LinearLayout>
