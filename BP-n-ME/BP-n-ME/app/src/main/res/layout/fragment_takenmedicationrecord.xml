<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/mcalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_tileHeight="35dp"
        app:mcv_calendarMode="month"
        app:mcv_showOtherDates="out_of_range"
        android:background="@color/calendarbg"
        app:mcv_arrowColor="@android:color/black"
        app:mcv_selectionColor="@color/appOrange"
        app:mcv_headerTextAppearance="@style/headerTextAppearance"
        app:mcv_dateTextAppearance="@style/monthTextAppearance"
        app:mcv_weekDayTextAppearance="@style/weekTextAppearancemember" />

    <ListView
        android:id="@+id/medicationListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbarThumbVertical="@android:color/transparent" />


</LinearLayout>